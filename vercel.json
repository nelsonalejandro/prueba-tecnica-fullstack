{
    "version": 2,
    "buildCommand": "npm run install:all && npm run build:frontend",
    "outputDirectory": "frontend/build",
    "installCommand": "npm install",
    "builds": [
        {
            "src": "backend/src/index.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/src/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/build/$1"
        }
    ]
}